<h1>All Posts</h1>

<%= link_to 'New', new_article_path %>

<section>

  <% @articles.each do |article| %>
    <article>
      <h2><%= article.title %></h2>
      <h3>Category: <%= article.category %></h3>
      <p><%= article_preview(article) %></p>
      <nav>
        <%= link_to 'Read More', article_path(article) %>
        <%= link_to 'Delete', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure? This is permanent!'} %>
      </nav>
    </article>

  <% end %>

</section>
